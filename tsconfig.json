{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@services": [
        "./src/services"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@state": [
        "./src/state"
      ],
      "@state/*": [
        "./src/state/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@components/*": [
        "./src/components/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}